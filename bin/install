#!/usr/bin/env bash
set -e

# check ASDF environment variables
[ -n "$ASDF_INSTALL_VERSION" ] || (echo 'Missing ASDF_INSTALL_VERSION' >&2 && exit 1)
[ -n "$ASDF_INSTALL_PATH" ] || (echo 'Missing ASDF_INSTALL_PATH' >&2 && exit 1)

mkdir -p "${ASDF_INSTALL_PATH}/bin"
toolPath="${ASDF_INSTALL_PATH}/bin/terraformer"
downloadPath="$(mktemp -d)"
cd "${downloadPath}"

case "$(uname -s)" in
	"Darwin")
		DOWNLOAD_URL="https://github.com/GoogleCloudPlatform/terraformer/releases/download/${ASDF_INSTALL_VERSION}/terraformer-darwin-amd64"
		curl -fL -o "${downloadPath}/terraformer" "${DOWNLOAD_URL}"
		mv ./terraformer "${toolPath}"
		;;
	"Linux")
		DOWNLOAD_URL="https://github.com/GoogleCloudPlatform/terraformer/releases/download/${ASDF_INSTALL_VERSION}/terraformer-linux-amd64"
		curl -fL -o "${downloadPath}/terraformer" "${DOWNLOAD_URL}"
		mv ./terraformer "${toolPath}"
		;;
esac

chmod +x "${toolPath}"
rm -rf "${downloadPath}"
